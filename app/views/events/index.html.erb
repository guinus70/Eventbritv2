<div class="jumbotron jumbotron-fluid text-center">
  <h1 class="display-4 pt-5 font-weight-bold text-center">Bienvenue sur Event-THP-JP</h1>
  <%= link_to "Partagez votre event", new_event_path , class: "btn btn-success m-3" %>
</div>

<div class="col-12 text-center">
  <% @events.each do |event| %>
    <div class="card">
      <div class="card-body">
        <h5 class="mt-0 text-center"><%= event.title  %></h5>
        <p class="text-info"><%= event.start_date.strftime("%d %B %Y")%></p>
        <p>Le prix de cet événement sera de <%= event.price %> euros</p>
        <%= link_to "Afficher cet event", event_path(:id => event.id), class: 'btn btn-outline-success btn-sm' %>
      </div>
    </div>
  <% end %>
</div>