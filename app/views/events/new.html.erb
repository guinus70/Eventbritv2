<h1 class="text-center" style="margin: 20px 0;">Crée un event !</h1>

<div class=" container text-center">
  <%= form_with model: @event, local: true do |form| %>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :title, 'Titre' %> </div>
    <div class="col-lg-9">
      <%= form.text_field :title, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :location, 'Localisation' %> </div>
    <div class="col-lg-9">
      <%= form.text_field :location, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :start_date, 'Date' %> </div>
    <div class="col-lg-9">
      <%= form.datetime_select  :start_date, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :duration, 'Durée' %> </div>
    <div class="col-lg-9">
      <%= form.number_field :duration, {value: '15', min: 5, step: 5  } %>  (multiple de 5)
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :price, 'Prix' %> </div>
    <div class="col-lg-9">
      <%= form.number_field :price, {value: '199', min: 1, max: 1000  } %>  (en euros)
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-3"> <%= form.label :description, 'Description' %> </div>
    <div class="col-lg-9">
      <%= form.text_area :description, class: "form-control"  %>
    </div>
  </div>
    <div class="actions">
        <%= form.submit "Valider", class: "btn btn-outline-success", style: "margin: 10px 0;" %>
    </div>
    <% end %>
</div>